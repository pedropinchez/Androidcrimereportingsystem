<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="12.0">

    <LinearLayout
        android:id="@+id/blur"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="12.0"
        android:background="#70ffffff"
        android:orientation="vertical"
        android:weightSum="12.0">



        <LinearLayout
            android:id="@+id/holder"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="0.2"
                android:src="@drawable/logopolice" />
        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:background="#ff000000" />

        <LinearLayout
            android:id="@+id/relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#2196F3"
            android:orientation="vertical">

            <ScrollView
                android:id="@+id/scroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">



                    <LinearLayout
                        android:id="@+id/row1"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="20.0dip"
                        android:columnOrderPreserved="false"
                        android:orientation="horizontal"
                        android:paddingTop="5.0dip">
                        <LinearLayout
                            android:id="@+id/report"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5.0dip"
                            android:layout_weight="4"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:layout_width="60.0dip"
                                android:layout_height="60.0dip"
                                android:layout_gravity="center_horizontal"
                                android:background="@color/iconholders">
                                <ImageView
                                    android:layout_width="50.0dip"
                                    android:layout_height="50.0dip"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/report" />
                            </RelativeLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="Report"
                                android:textColor="#ff000000"
                                android:textSize="12.0sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/reported"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5.0dip"
                            android:layout_weight="4"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="60.0dip"
                                android:layout_height="60.0dip"
                                android:layout_gravity="center_horizontal"
                                android:background="@color/iconholders">

                                <ImageView
                                    android:layout_width="50.0dip"
                                    android:layout_height="50.0dip"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/reported" />
                            </RelativeLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="reported"
                                android:textColor="#ff000000"
                                android:textSize="12.0sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/appointment"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5.0dip"
                            android:layout_weight="4"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:layout_width="60.0dip"
                                android:layout_height="60.0dip"
                                android:layout_gravity="center_horizontal"
                                android:background="@color/iconholders">
                                <ImageView
                                    android:layout_width="50.0dip"
                                    android:layout_height="50.0dip"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/appointment" />
                            </RelativeLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="appointment"
                                android:textColor="#ff000000"
                                android:textSize="12.0sp"
                                android:textStyle="bold" />
                        </LinearLayout></LinearLayout>






                    <LinearLayout
                        android:id="@+id/row2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="20.0dip"
                        android:columnOrderPreserved="false"
                        android:orientation="horizontal"
                        android:layout_below="@id/row1"
                        android:paddingTop="5.0dip">
                        <LinearLayout
                            android:id="@+id/profile"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5.0dip"
                            android:layout_weight="4"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="60.0dip"
                                android:layout_height="60.0dip"
                                android:layout_gravity="center_horizontal"
                                android:background="@color/iconholders">
                                <ImageView
                                    android:layout_width="50.0dip"
                                    android:layout_height="50.0dip"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/profile1" />
                            </RelativeLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="profile"
                                android:textColor="#ff000000"
                                android:textSize="12.0sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/aboutus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5.0dip"
                            android:layout_weight="4"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:layout_width="60.0dip"
                                android:layout_height="60.0dip"
                                android:layout_gravity="center_horizontal"
                                android:background="@color/iconholders">
                                <ImageView
                                    android:layout_width="50.0dip"
                                    android:layout_height="50.0dip"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/proceeding" />
                            </RelativeLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="aboutus"
                                android:textColor="#ff000000"
                                android:textSize="12.0sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/contactus"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5.0dip"
                            android:layout_weight="4"
                            android:onClick="toAboutMe"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:layout_width="60.0dip"
                                android:layout_height="60.0dip"
                                android:layout_gravity="center_horizontal"
                                android:background="@color/iconholders">

                                <ImageView
                                    android:layout_width="50.0dip"
                                    android:layout_height="50.0dip"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/contact" />
                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="contactus"
                                android:textColor="#ff000000"
                                android:textSize="12.0sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/row3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="20.0dip"
                        android:columnOrderPreserved="false"
                        android:orientation="horizontal"
                        android:layout_below="@id/row2"
                        android:paddingTop="5.0dip">
                        <LinearLayout
                            android:id="@+id/lost"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5.0dip"
                            android:layout_weight="4"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="60.0dip"
                                android:layout_height="60.0dip"
                                android:layout_gravity="center_horizontal"
                                android:background="@color/iconholders">

                                <ImageView
                                    android:layout_width="50.0dip"
                                    android:layout_height="50.0dip"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/lost" />
                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="lost"
                                android:textColor="#ff000000"
                                android:textSize="12.0sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/found"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5.0dip"
                            android:layout_weight="4"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="60.0dip"
                                android:layout_height="60.0dip"
                                android:layout_gravity="center_horizontal"
                                android:background="@color/iconholders">

                                <ImageView
                                    android:layout_width="50.0dip"
                                    android:layout_height="50.0dip"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/bowl" />
                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="found"
                                android:textColor="#ff000000"
                                android:textSize="12.0sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/claimed"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5.0dip"
                            android:layout_weight="4"
                            android:onClick="toAboutMe"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="60.0dip"
                                android:layout_height="60.0dip"
                                android:layout_gravity="center_horizontal"
                                android:background="@color/iconholders">

                                <ImageView
                                    android:layout_width="50.0dip"
                                    android:layout_height="50.0dip"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/confirm" />
                            </RelativeLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="Claimed"
                                android:textColor="#ff000000"
                                android:textSize="12.0sp"
                                android:textStyle="bold" />
                        </LinearLayout>


                    </LinearLayout>



                     //botttom

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffb8b8b8"
                        android:layout_below="@id/row3"
                        android:paddingTop="25.0dip">
                        <TextView
                            android:id="@+id/top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="50.0dip"
                            android:background="#ff999999"
                            android:padding="15.0dip"
                            android:text="TOP OF PAGE"
                            android:textSize="12.0sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/top"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="40.0dip"
                            android:layout_marginBottom="10.0dip"
                            android:padding="10.0dip"
                            android:text="© 2020 CrimereportingSystem"
                            android:textSize="15.0sp"
                            android:textStyle="italic" />

                    </RelativeLayout>
                </RelativeLayout>
            </ScrollView>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">
               <WebView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/webView"
                   android:visibility="invisible"/>
               <ProgressBar
                   android:id="@+id/progressbar"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:layout_centerInParent="true"
                   android:visibility="invisible" />
           </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff"
   >




    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_centerVertical="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="200.0dip"
                android:layout_height="200.0dip"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logopolice" />

            <View
                android:id="@+id/line"
                android:layout_width="fill_parent"
                android:layout_height="1.0dip"
                android:layout_below="@+id/logo"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:background="#ff6c6c6c" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15.0dip"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/pobox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_centerHorizontal="true"
                android:onClick="PoBox"
                android:layout_marginTop="35.0dip"
                android:text="PoBox 12345 "
                android:textColor="#000"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pobox"
                android:onClick="Phone"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15.0dip"
                android:text="Phone no: 0726581039"
                android:textColor="#000"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone"
                android:layout_centerHorizontal="true"
                android:onClick="Email"
                android:layout_marginBottom="25.0dip"
                android:layout_marginTop="15.0dip"
                android:text="CrimereportingSystem@gmail.com"
                android:textColor="#000"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textStyle="bold" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tt"
                android:layout_centerHorizontal="true"
                android:padding="25.0dip">

                <ImageView
                    android:id="@+id/facebook"
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="20.0dip"
                    android:scaleType="centerCrop"
                    android:onClick="Call"
                    android:src="@drawable/cal"
                    android:layout_marginEnd="20.0dip" />

                <ImageView
                    android:id="@+id/email"
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20.0dip"
                    android:layout_toRightOf="@+id/facebook"
                    android:scaleType="centerInside"
                    android:onClick="message"
                    android:src="@drawable/mmmm"
                    android:layout_toEndOf="@+id/facebook"
                    android:layout_marginStart="20.0dip" />

                <ImageView
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="40.0dip"
                    android:onClick="Whatsapp"
                    android:layout_toRightOf="@+id/email"
                    android:scaleType="centerInside"
                    android:src="@drawable/whats"
                    android:layout_marginStart="40.0dip"
                    android:layout_toEndOf="@+id/email" />
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>
</RelativeLayout>
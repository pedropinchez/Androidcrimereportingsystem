<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:weightSum="100"
    android:gravity="center"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_weight="90"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:minHeight="100.0dip"
        android:minWidth="300.0dip"
        app:cardBackgroundColor="@color/colWhite"
        app:cardCornerRadius="20.0dip">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:minHeight="100.0dip"
            android:padding="10.0dip">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="10.0dip"
                android:text="National Id"
                android:textColor="#ff000000"
                android:textSize="16.0sp" />

            <TextView
                android:id="@+id/idname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:padding="1.0dip"
                android:text="Name :"
                android:textSize="13.0sp" />

            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idname"
                android:padding="1.0dip"
                android:text="ID Number :"
                android:textSize="13.0sp" />

            <TextView
                android:id="@+id/idnametext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_marginLeft="20.0dip"
                android:layout_toRightOf="@+id/id"
                android:maxLength="25"
                android:padding="1.0dip"
                android:textSize="13.0sp"
                android:layout_marginStart="20.0dip"
                android:layout_toEndOf="@+id/id" />

            <TextView
                android:id="@+id/idtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idname"
                android:layout_marginLeft="20.0dip"
                android:layout_toRightOf="@+id/id"
                android:maxLength="30"
                android:padding="1.0dip"
                android:textSize="13.0sp"
                android:layout_marginStart="20.0dip"
                android:layout_toEndOf="@+id/id" />

            <TextView
                android:id="@+id/telid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12.0sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/timeid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card"
                android:layout_width="80.0dip"
                android:layout_height="25.0dip"
                android:layout_below="@+id/idtext"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10.0dip"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="15.0dip">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="50.0dip"
                        android:text="SEE MORE"
                        android:textColor="@color/colWhite"
                        android:textSize="12.0sp"
                        android:textStyle="bold" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/expiretime"
        android:visibility="gone"/>

</LinearLayout>